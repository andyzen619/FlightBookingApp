<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.Users.AdminActivity"
    tools:showIn="@layout/activity_admin"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/flight_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/flight"
        />
    <Button
        android:id="@+id/upload_flight"
        style="?android:textAppearanceSmall"
        android:text="@string/upload_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:onClick="Upload"/>

    <EditText
        android:id="@+id/client_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/client"
        />

    <Button
        android:id="@+id/upload_clients"
        style="?android:textAppearanceSmall"
        android:text="@string/upload_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:onClick="UploadClients"/>

    <EditText
        android:id="@+id/password_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pass"
        />

    <Button
        android:id="@+id/upload_passwords"
        style="?android:textAppearanceSmall"
        android:text="@string/upload_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:onClick="UploadPass"/>


    <Button
        android:id="@+id/add_flight"
        style="?android:textAppearanceSmall"
        android:text="@string/add_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:onClick="addFlight"/>

    <Button
        android:id="@+id/search_flights"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_flights"
        android:textStyle="bold"
        android:onClick="searchFlights"/>

    <Button
        android:id="@+id/search_itineraries"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_itineraries"
        android:textStyle="bold"
        android:onClick="searchItineraries"/>

</LinearLayout>
